	</div>
		
	<!-- navigation starts-->	

	<div  id="nav" style="background-image: url(../Images/nav.gif)" >
       

		<ul>
			<li id="current" style="background: transparent url(../Images/right-tab.gif) no-repeat right top;">@Html.ActionLink("Home", "Index", "Home")</li>

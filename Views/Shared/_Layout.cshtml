            <li>@Html.ActionLink("Most Affected Areas", "areas", "Home")</li>
            
		</ul>

	<!-- navigation ends-->	
	</div>					
			
	<!-- content starts -->
	<div id="content">
        <div id="main">
	    @RenderSection("featured", required: false)
        @RenderBody()		
        
        <!-- main ends -->	
		</div>
				
		<div id="sidebar">
		
			<h3>Search</h3>	
			
			 <form action="~/Home/GetSearch" method="post" id="searchform " style="width:278px">
			<p>
			<label for="qsearch">Search:</label>
			
             <input class="tbox" type="text" name = "searchbar" id="searchfeild" value=""  onfocus="this.value=(this.value=='Search Our Website&hellip;')? '' : this.value ;" />
             <input type="submit" name="submit" id="go" value="Search"  />

			</p>
			</form>		
			
			<h3>Sidebar Menu</h3>
			<ul class="sidemenu">				
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li>@Html.ActionLink("File A FIR", "RegisterFIR", "Home")</li>
            <li>@Html.ActionLink("Crime Chart", "crimeChart", "Home")</li> 
            <li>@Html.ActionLink("Most Affected Areas", "areas", "Home")
	
			</ul>

			
			<h3>Wise Words</h3>
			<p>&quot;We can let circumstances rule us, or we can take 
			charge and rule our lives from within.&quot;</p>
					
			<p class="align-right">- Earl Nightingale</p>
					
			<h3>FeedBack</h3>
			<p>If you are interested in reducing the crimes and would like to contribute, you are
			welcome to make FIR of every Incident through the 
			<a href="#">Online FIR Sytem</a>  it will 
			be a great help and will surely be appreciated.</p>			
						
		<!-- sidebar ends -->		
		</div>		
		
	<!-- content ends-->	
	</div>
		

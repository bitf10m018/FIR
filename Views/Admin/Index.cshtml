@model IEnumerable<Online_FIR.Models.FIR>

@{
    ViewBag.Title = "Index";
}

<style>
    table {
        text-align:left;
    }
   tr,td {
       border:inset;
        text-align:left;
        padding-left:10px;
        padding-right:10px;
    }
</style>
<h2>All Registered FIRs</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNIC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITY)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Mobile_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            Date
        </th>
        <th>
            Area 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nominies)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNIC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CITY)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Mobile_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_of_Incident)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area_of_Incident)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nominies)
        </td>
        <td>
            @Html.ActionLink("Edit   ", "Edit", new { id=item.FId })   
            @Html.ActionLink("Details", "Details", new {id=item.FId})  
            @Html.ActionLink("Delete ", "Delete", new { id=item.FId })
        </td>
    </tr>
}

</table>
